<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:Stuffort.Resources"
             xmlns:views="clr-namespace:Stuffort.View"
             x:Class="Stuffort.View.HomePage">
    <FlyoutItem Title="{x:Static resx:AppResources.Subjects}">
        <Tab>
            <ShellContent Route="Subjects" ContentTemplate="{DataTemplate views:SubjectsPage}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="{x:Static resx:AppResources.Tasks}">
        <Tab>
            <ShellContent Route="Tasks" ContentTemplate="{DataTemplate views:TasksPage}"/>
        </Tab>
    </FlyoutItem>
</Shell>