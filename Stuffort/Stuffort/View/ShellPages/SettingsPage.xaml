<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:Stuffort.Resources"
             x:Class="Stuffort.View.ShellPages.SettingsPage"
             Shell.BackgroundColor="{StaticResource stuffortBlue}"
             Shell.TabBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout>
            <FlexLayout Margin="10,10,0,350" Direction="Row" JustifyContent="SpaceEvenly" AlignItems="Center">
                <Label x:Name="languageLbl" Margin="-30,0,0,0" FontSize="20" Grid.Row="0" Grid.Column="1"/>
                <Picker x:Name="languagePicker"
                        TitleColor="Black"
                        WidthRequest="200"
                        Grid.Row="1" Grid.Column="2"/>
            </FlexLayout>
            <Button x:Name="saveBtn"
                    Text="{x:Static resx:AppResources.Save}"
                    Margin="130,20"
                    HeightRequest="40"
                    Command="{Binding SettingsCommand}"
                    CommandParameter="{Binding LanguagePicker}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>