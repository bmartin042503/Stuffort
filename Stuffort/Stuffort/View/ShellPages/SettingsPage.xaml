<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resx="clr-namespace:Stuffort.Resources"
             x:Class="Stuffort.View.ShellPages.SettingsPage"
             Shell.TabBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalTextAlignment="Center" Margin="0,10" FontSize="25" Text="{x:Static resx:AppResources.Settings}"/>
            <FlexLayout Margin="0,0,0,50" Direction="Row" JustifyContent="SpaceEvenly" AlignItems="Center">
                <Image HeightRequest="40" WidthRequest="40" x:Name="languageIconImage" Aspect="AspectFit" Grid.Row="0" Grid.Column="0"/>
                <Label FontSize="20" Text="{x:Static resx:AppResources.Language}" Grid.Row="0" Grid.Column="1"/>
                <Picker x:Name="languagePicker" ItemsSource="{Binding Languages}"
                WidthRequest="200"
                Grid.Row="1" Grid.Column="2"
                TextColor="{x:StaticResource stuffortWhite}"
                TitleColor="{x:StaticResource stuffortWhite}"/>
            </FlexLayout>
            <Button Text="{x:Static resx:AppResources.Save}"
                    Margin="130,20"
                    HeightRequest="40"
                    Command="{Binding MainPageCommand}"
                    CommandParameter="{Binding LanguagePicker}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>