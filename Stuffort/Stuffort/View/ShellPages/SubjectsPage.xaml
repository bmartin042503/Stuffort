<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stuffort.View.ShellPages.SubjectsPage"
             xmlns:resx="clr-namespace:Stuffort.Resources"
             Shell.TabBarIsVisible="False"
             xmlns:converters="clr-namespace:Stuffort.ViewModel.Converters"
             x:Name="subjectsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding SubjectCommand}"
                     Icon="ic_action_add.png"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:DateTimeToStringConverter x:Key="dtConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Margin="0,7.5,0,0">
            <Label HorizontalTextAlignment="Center" Margin="0,0,0,5" FontSize="25" Text="{Binding CurrentTitle}"/>
            <ListView ItemsSource="{Binding SubjectList}" IsPullToRefreshEnabled="True" RefreshCommand="{Binding SubjectRefreshCommand}"
                      IsRefreshing="{Binding IsRefreshing}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" 
                                  TextColor="Black"
                                  Detail="{Binding AddedTime, Converter={StaticResource dtConverter}}">
                            <TextCell.ContextActions>
                                <MenuItem Text="{x:Static resx:AppResources.Delete}" IconImageSource="ic_action_delete.png" IsDestructive="True" 
                                      Command="{Binding Path=BindingContext.SubjectRemoveCommand, Source={x:Reference subjectsPage}}"
                                      CommandParameter="{Binding .}"/>
                            </TextCell.ContextActions>
                        </TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>