<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stuffort.View.ShellPages.NewTaskPage"
             Shell.FlyoutBehavior="Disabled">
    <StackLayout x:Name="newTaskStackLayout">
        <Label FontSize="Large" Text="Új feladat hozzáadása"/>
        <Entry Placeholder="Név" Text="{Binding Name}"/>
        <Picker SelectedIndex="{Binding Index}"/>
        <RadioButton Content="Határidő" IsChecked="{Binding IsDeadline}" />
        <DatePicker Date="{Binding Date}"/>
        <Button Text="Mentés" Command="{Binding NewTaskCommand}"/>
    </StackLayout>
</ContentPage>